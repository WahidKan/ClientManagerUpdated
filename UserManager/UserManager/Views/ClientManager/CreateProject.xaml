<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserManager.Views.ClientManager.CreateProject">
    <ContentPage.Content>
        <StackLayout Margin="40,20">
            <Label Text="Add New Project" FontSize="Large" Margin="0,20"/>
            <Grid Margin="10,20" BackgroundColor="AliceBlue">
                <Label Text="Client ID : " Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="clientId" Grid.Row="0" Grid.Column="1"/>

                <Label Text="Project Name : " Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="projectName" Grid.Row="1" Grid.Column="1"/>

            </Grid>

            <Button Text="Create" Clicked="Button_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>