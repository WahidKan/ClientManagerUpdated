<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserManager.Views.ClientManager.EditContactPage">
    <ContentPage.Content>
        <StackLayout Margin="40,20">
            <Label Text="Edit Contact" FontSize="Large" Margin="0,20"/>
            <Grid Margin="10,20" BackgroundColor="AliceBlue">
                <Label Text="Client ID : " Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="clientId" Grid.Row="0" Grid.Column="1"/>

                <Label Text="First Name : " Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="firstName" Grid.Row="1" Grid.Column="1"/>

                <Label Text="Last Name : " Grid.Row="2" Grid.Column="0"/>
                <Entry x:Name="lastName" Grid.Row="2" Grid.Column="1"/>

                <Label Text="Email : " Grid.Row="3" Grid.Column="0"/>
                <Entry x:Name="email" Grid.Row="3" Grid.Column="1"/>

                <Label Text="Designation : " Grid.Row="4" Grid.Column="0"/>
                <Entry x:Name="designation" Grid.Row="4" Grid.Column="1"/>

                <Label Text="Contact Number : " Grid.Row="5" Grid.Column="0"/>
                <Entry x:Name="contact_number" Grid.Row="5" Grid.Column="1"/>


            </Grid>

            <Button Text="Update" Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>